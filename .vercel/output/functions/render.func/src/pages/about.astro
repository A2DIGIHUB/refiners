---
import Layout from '../layouts/Layout.astro';

const leadershipTeam = [
  {
    name: 'Pastor John Smith',
    role: 'Senior Pastor',
    description: 'Leading our congregation with wisdom and grace for over 10 years.',
  },
  {
    name: 'Sarah Johnson',
    role: 'Worship Pastor',
    description: 'Directing our worship ministry and cultivating a spirit of praise.',
  },
  {
    name: 'Michael Chen',
    role: 'Youth Pastor',
    description: 'Guiding and mentoring our next generation of believers.',
  },
  {
    name: 'Rachel Thompson',
    role: 'Children\'s Minister',
    description: 'Nurturing the spiritual growth of our youngest members.',
  },
];
---

<Layout title="About Us">
  <main>
    <!-- Hero Section -->
    <section class="bg-primary-900 text-white py-16">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-bold mb-4">About Refiners City</h1>
        <p class="text-xl text-primary-200">Transforming lives through Christ's love</p>
      </div>
    </section>

    <!-- Our Story -->
    <section class="py-16">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-3xl font-bold text-primary-900 mb-6">Our Story</h2>
          <div class="prose prose-lg text-primary-700">
            <p class="mb-4">
              Founded in 2010, Refiners City Church began with a small group of believers committed to creating a welcoming community where people could encounter God's love and experience authentic transformation.
            </p>
            <p class="mb-4">
              Over the years, we've grown into a vibrant congregation dedicated to serving our community and spreading the message of hope and redemption through Jesus Christ.
            </p>
            <p>
              Our mission remains unchanged: to be a place where people can belong, believe, and become all that God has called them to be.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Beliefs -->
    <section class="py-16 bg-primary-50">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-primary-900 mb-6 text-center">Our Beliefs</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-primary-900 mb-3">The Bible</h3>
            <p class="text-primary-700">We believe the Bible is God's inspired Word and our guide for faith and life.</p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-primary-900 mb-3">Salvation</h3>
            <p class="text-primary-700">Salvation comes through faith in Jesus Christ alone.</p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-primary-900 mb-3">The Church</h3>
            <p class="text-primary-700">The church is a community of believers called to worship, grow, and serve together.</p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-primary-900 mb-3">Mission</h3>
            <p class="text-primary-700">We are called to share God's love and make disciples of all nations.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Leadership Team -->
    <section class="py-16">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-primary-900 mb-6 text-center">Our Leadership Team</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {leadershipTeam.map((leader) => (
            <div class="bg-white p-6 rounded-lg shadow-md text-center">
              <div class="w-24 h-24 bg-primary-200 rounded-full mx-auto mb-4"></div>
              <h3 class="text-xl font-semibold text-primary-900 mb-2">{leader.name}</h3>
              <p class="text-primary-600 mb-2">{leader.role}</p>
              <p class="text-primary-700 text-sm">{leader.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>