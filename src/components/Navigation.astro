---
const navigation = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/about' },
  { name: 'Ministries', href: '/ministries' },
  { name: 'Sermons', href: '/sermons' },
  { name: 'Events', href: '/events' },
  { name: 'Give', href: '/give' },
  { name: 'Contact', href: '/contact' },
];
---

<header class="bg-white shadow-sm">
  <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8" aria-label="Top">
    <div class="flex w-full items-center justify-between border-b border-primary-200 py-6">
      <div class="flex items-center">
        <a href="/">
          <span class="text-2xl font-bold text-primary-800">Refiners City</span>
        </a>
      </div>
      <div class="hidden ml-10 space-x-8 lg:block">
        {
          navigation.map((link) => (
            <a href={link.href} class="text-base font-medium text-primary-700 hover:text-primary-900">
              {link.name}
            </a>
          ))
        }
      </div>
      <div class="ml-10 space-x-4">
        <a
          href="/new-here"
          class="inline-block bg-primary-600 py-2 px-4 border border-transparent rounded-md text-base font-medium text-white hover:bg-primary-700"
        >
          I'm New Here
        </a>
      </div>
    </div>
    <div class="py-4 flex flex-wrap justify-center space-x-6 lg:hidden">
      {
        navigation.map((link) => (
          <a href={link.href} class="text-base font-medium text-primary-700 hover:text-primary-900">
            {link.name}
          </a>
        ))
      }
    </div>
  </nav>
</header>