---
import Layout from '../layouts/Layout.astro';

const givingOptions = [
  {
    title: 'One-Time Gift',
    description: 'Make a single contribution to support our ministry',
    button: 'Give Now',
  },
  {
    title: 'Recurring Giving',
    description: 'Set up automatic monthly donations',
    button: 'Set Up Recurring Gift',
  },
  {
    title: 'Special Projects',
    description: 'Support specific ministry initiatives and outreach programs',
    button: 'View Projects',
  },
];
---

<Layout title="Give">
  <main>
    <!-- Hero Section -->
    <section class="bg-primary-900 text-white py-16">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-bold mb-4">Give</h1>
        <p class="text-xl text-primary-200">Supporting the mission through generous giving</p>
      </div>
    </section>

    <!-- Giving Options -->
    <section class="py-16">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-primary-900 mb-4">Ways to Give</h2>
          <p class="text-lg text-primary-700 max-w-2xl mx-auto">
            Your generosity helps us continue our mission of transforming lives and serving our community.
          </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {givingOptions.map((option) => (
            <div class="bg-white p-6 rounded-lg shadow-md text-center">
              <h3 class="text-xl font-semibold text-primary-900 mb-3">{option.title}</h3>
              <p class="text-primary-700 mb-6">{option.description}</p>
              <button class="bg-primary-600 text-white px-6 py-3 rounded-md font-semibold hover:bg-primary-700 w-full">
                {option.button}
              </button>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Why Give -->
    <section class="py-16 bg-primary-50">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-3xl font-bold text-primary-900 mb-6 text-center">Why We Give</h2>
          <div class="prose prose-lg text-primary-700 mx-auto">
            <p class="mb-4">
              Giving is an act of worship and a reflection of our gratitude for God's blessings. Your
              faithful support enables us to:
            </p>
            <ul class="list-disc pl-6 mb-4">
              <li>Maintain and improve our facilities</li>
              <li>Support local and global missions</li>
              <li>Provide resources for our ministries</li>
              <li>Help those in need in our community</li>
              <li>Invest in the next generation</li>
            </ul>
            <p>
              Every gift, regardless of size, makes a difference in advancing God's kingdom through
              the work of Refiners City Church.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Additional Information -->
    <section class="py-16">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-primary-900 mb-4">Other Ways to Give</h3>
            <ul class="space-y-3 text-primary-700">
              <li>• Mail your gift to our church office</li>
              <li>• Give during Sunday services</li>
              <li>• Donate stocks or securities</li>
              <li>• Include the church in your estate planning</li>
            </ul>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-primary-900 mb-4">Questions About Giving?</h3>
            <p class="text-primary-700 mb-4">
              Our team is here to help answer any questions you may have about giving to Refiners City Church.
            </p>
            <a
              href="/contact"
              class="inline-block bg-primary-600 text-white px-6 py-3 rounded-md font-semibold hover:bg-primary-700"
            >
              Contact Us
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>