---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact">
  <main>
    <!-- Hero Section -->
    <section class="bg-primary-900 text-white py-16">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-bold mb-4">Contact Us</h1>
        <p class="text-xl text-primary-200">We'd love to hear from you</p>
      </div>
    </section>

    <!-- Contact Information and Form -->
    <section class="py-16">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contact Information -->
          <div>
            <h2 class="text-2xl font-bold text-primary-900 mb-6">Get in Touch</h2>
            <div class="space-y-6">
              <div>
                <h3 class="text-lg font-semibold text-primary-900 mb-2">Address</h3>
                <p class="text-primary-700">
                  123 Church Street<br />
                  City, State 12345
                </p>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-primary-900 mb-2">Phone</h3>
                <p class="text-primary-700">(555) 123-4567</p>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-primary-900 mb-2">Email</h3>
                <p class="text-primary-700">info@refinerscity.org</p>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-primary-900 mb-2">Office Hours</h3>
                <p class="text-primary-700">
                  Monday - Friday: 9:00 AM - 5:00 PM<br />
                  Saturday: Closed<br />
                  Sunday: 8:00 AM - 1:00 PM
                </p>
              </div>
            </div>

            <!-- Social Media Links -->
            <div class="mt-8">
              <h3 class="text-lg font-semibold text-primary-900 mb-4">Connect With Us</h3>
              <div class="flex space-x-4">
                <a href="#" class="text-primary-600 hover:text-primary-900">Facebook</a>
                <a href="#" class="text-primary-600 hover:text-primary-900">Instagram</a>
                <a href="#" class="text-primary-600 hover:text-primary-900">YouTube</a>
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div>
            <h2 class="text-2xl font-bold text-primary-900 mb-6">Send Us a Message</h2>
            <form class="space-y-6">
              <div>
                <label for="name" class="block text-sm font-medium text-primary-700">Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="mt-1 block w-full rounded-md border-primary-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                  required
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-primary-700">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="mt-1 block w-full rounded-md border-primary-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                  required
                />
              </div>
              <div>
                <label for="subject" class="block text-sm font-medium text-primary-700">Subject</label>
                <select
                  id="subject"
                  name="subject"
                  class="mt-1 block w-full rounded-md border-primary-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                >
                  <option>General Inquiry</option>
                  <option>Prayer Request</option>
                  <option>Volunteering</option>
                  <option>Other</option>
                </select>
              </div>
              <div>
                <label for="message" class="block text-sm font-medium text-primary-700">Message</label>
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  class="mt-1 block w-full rounded-md border-primary-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                  required
                ></textarea>
              </div>
              <div>
                <button
                  type="submit"
                  class="w-full bg-primary-600 text-white px-6 py-3 rounded-md font-semibold hover:bg-primary-700"
                >
                  Send Message
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- Map Section -->
    <section class="py-16 bg-primary-50">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-primary-900 mb-6 text-center">Find Us</h2>
        <div class="bg-white p-4 rounded-lg shadow-md aspect-w-16 aspect-h-9">
          <div class="w-full h-full bg-primary-100 rounded flex items-center justify-center">
            <p class="text-primary-600">Map will be embedded here</p>
           </div>
        </div>
      </div>
    </section>
  </main>
</Layout>