---
import Layout from '../layouts/Layout.astro';
import { FileUpload } from '../components/FileUpload';
import { FileGallery } from '../components/FileGallery';
---

<Layout title="Media Gallery">
  <main>
    <!-- Hero Section -->
    <section class="bg-primary-900 text-white py-16">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-bold mb-4">Media Gallery</h1>
        <p class="text-xl text-primary-200">Upload and manage your files</p>
      </div>
    </section>

    <!-- Upload Section -->
    <section class="py-8 bg-primary-50">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-2xl font-bold text-primary-900 mb-4">Upload Files</h2>
          <FileUpload
            bucket="media"
            path="uploads"
            allowedTypes={['image/jpeg', 'image/png', 'image/webp', 'application/pdf']}
            maxSize={10 * 1024 * 1024}
            multiple={true}
            client:load
          />
        </div>
      </div>
    </section>

    <!-- Gallery Section -->
    <section class="py-8">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <FileGallery client:load />
      </div>
    </section>
  </main>
</Layout>