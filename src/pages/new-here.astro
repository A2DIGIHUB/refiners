---
import Layout from '../layouts/Layout.astro';

const whatToExpect = [
  {
    title: 'Warm Welcome',
    description: 'Our welcome team will greet you and help you find your way around.',
  },
  {
    title: 'Worship Experience',
    description: 'Contemporary worship music and relevant, Bible-based teaching.',
  },
  {
    title: 'Children\'s Programs',
    description: 'Safe and engaging programs for children of all ages during services.',
  },
  {
    title: 'Connection Time',
    description: 'Opportunities to meet others and enjoy refreshments after service.',
  },
];
---

<Layout title="I'm New Here">
  <main>
    <!-- Hero Section -->
    <section class="bg-primary-900 text-white py-16">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-bold mb-4">Welcome to Refiners City</h1>
        <p class="text-xl text-primary-200">We're so glad you're here</p>
      </div>
    </section>

    <!-- Service Times -->
    <section class="py-16">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-primary-900 mb-4">Join Us This Weekend</h2>
          <p class="text-lg text-primary-700">
            We'd love to have you join us for one of our weekend services
          </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <h3 class="text-xl font-semibold text-primary-900 mb-2">Sunday Services</h3>
            <p class="text-primary-700">9:00 AM & 11:00 AM</p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <h3 class="text-xl font-semibold text-primary-900 mb-2">Wednesday Night</h3>
            <p class="text-primary-700">7:00 PM</p>
          </div>
        </div>
      </div>
    </section>

    <!-- What to Expect -->
    <section class="py-16 bg-primary-50">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-primary-900 mb-4">What to Expect</h2>
          <p class="text-lg text-primary-700 max-w-2xl mx-auto">
            We want you to feel at home from the moment you arrive
          </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {whatToExpect.map((item) => (
            <div class="bg-white p-6 rounded-lg shadow-md text-center">
              <h3 class="text-xl font-semibold text-primary-900 mb-3">{item.title}</h3>
              <p class="text-primary-700">{item.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Plan Your Visit -->
    <section class="py-16">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="p-8">
            <h2 class="text-3xl font-bold text-primary-900 mb-6 text-center">Plan Your Visit</h2>
            <form class="max-w-2xl mx-auto space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-sm font-medium text-primary-700">Name</label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    class="mt-1 block w-full rounded-md border-primary-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                    required
                  />
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium text-primary-700">Email</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    class="mt-1 block w-full rounded-md border-primary-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                    required
                  />
                </div>
              </div>
              <div>
                <label for="visit-date" class="block text-sm font-medium text-primary-700">
                  When are you planning to visit?
                </label>
                <select
                  id="visit-date"
                  name="visit-date"
                  class="mt-1 block w-full rounded-md border-primary-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                  required
                >
                  <option value="">Select a date</option>
                  <option>This Sunday</option>
                  <option>Next Sunday</option>
                  <option>In the next few weeks</option>
                </select>
              </div>
              <div>
                <label for="service-time" class="block text-sm font-medium text-primary-700">
                  Which service would you like to attend?
                </label>
                <select
                  id="service-time"
                  name="service-time"
                  class="mt-1 block w-full rounded-md border-primary-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                  required
                >
                  <option value="">Select a service time</option>
                  <option>Sunday 9:00 AM</option>
                  <option>Sunday 11:00 AM</option>
                  <option>Wednesday 7:00 PM</option>
                </select>
              </div>
              <div>
                <label class="block text-sm font-medium text-primary-700">
                  Will you be bringing children?
                </label>
                <div class="mt-2 space-y-2">
                  <div class="flex items-center">
                    <input
                      type="radio"
                      id="children-yes"
                      name="children"
                      value="yes"
                      class="focus:ring-primary-500 h-4 w-4 text-primary-600 border-primary-300"
                    />
                    <label for="children-yes" class="ml-2 text-primary-700">Yes</label>
                  </div>
                  <div class="flex items-center">
                    <input
                      type="radio"
                      id="children-no"
                      name="children"
                      value="no"
                      class="focus:ring-primary-500 h-4 w-4 text-primary-600 border-primary-300"
                    />
                    <label for="children-no" class="ml-2 text-primary-700">No</label>
                  </div>
                </div>
              </div>
              <div>
                <button
                  type="submit"
                  class="w-full bg-primary-600 text-white px-6 py-3 rounded-md font-semibold hover:bg-primary-700"
                >
                  Plan My Visit
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-16 bg-primary-50">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-primary-900 mb-8 text-center">Frequently Asked Questions</h2>
        <div class="max-w-3xl mx-auto space-y-6">
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-lg font-semibold text-primary-900 mb-2">What should I wear?</h3>
            <p class="text-primary-700">
              Come as you are! We're a casual church and want you to be comfortable.
            </p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-lg font-semibold text-primary-900 mb-2">Where do I park?</h3>
            <p class="text-primary-700">
              We have plenty of parking available, and our parking team will help direct you.
            </p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-lg font-semibold text-primary-900 mb-2">What about my kids?</h3>
            <p class="text-primary-700">
              We have safe, fun programs for children of all ages during our services.
            </p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-lg font-semibold text-primary-900 mb-2">How long are the services?</h3>
            <p class="text-primary-700">
              Our services typically last about 90 minutes, including worship and teaching.
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>